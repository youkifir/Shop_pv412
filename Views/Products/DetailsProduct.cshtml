@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Product

@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Product Details</h1>

<div class="card shadow w-50">
    <div class="card-header bg-primary text-white">
        Product Information
    </div>
    <div class="card-body">
        <h5 class="card-title display-6">@Model.Name</h5>
        <h6 class="card-subtitle mb-3 text-success fs-4">Price: $@Model.Price</h6>
        <p class="card-text lead">@Model.Description</p>

        <hr />

        <a asp-action="ReadProducts" asp-controller="Products" class="btn btn-secondary">Back to List</a>
    </div>
</div>