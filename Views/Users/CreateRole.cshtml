@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IdentityRole
@{
	Layout = "_Layout";
	ViewData["Title"] = "Create role";
}

<div class="row justify-content-center mt-5">
	<div class="col-md-6 col-lg-5">
		<div class="card shadow">
			<div class="card-body p-4">
				<h2 class="card-title text-center mb-4">Create role</h2>

				<form asp-action="CreateRole" asp-controller="Users" method="post">

					<div class="mb-3">
						<label asp-for="Name" class="form-label">
							<i class="bi bi-envelope"></i> Role Name
						</label>
						<input asp-for="Name" type="text" class="form-control" required />
					</div>

					<button type="submit" class="btn btn-primary w-100 py-2">
						Login
					</button>

				</form>
			</div>
		</div>
	</div>
</div>